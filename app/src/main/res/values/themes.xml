<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WmPosDemo2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppThemeNO" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.NoBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#489cfa</item>
        <item name="colorPrimaryDark">#2D78DD</item>
        <item name="colorAccent">#489cfa</item>
        <item name="android:typeface">monospace</item>
        <!--标题栏-->
        <item name="QMUITopBarStyle">@style/YourTopBarStyle</item>

        <item name="qmui_common_list_item_title_v_text_size">25sp</item>
        <item name="qmui_common_list_item_title_h_text_size">26sp</item>
        <item name="qmui_common_list_item_detail_v_text_size">23sp</item>
        <item name="qmui_common_list_item_detail_h_text_size">24sp</item>

        <item name="qmui_tip_dialog_min_width">360dp</item>
        <item name="qmui_tip_dialog_min_height">240dp</item>
        <item name="qmui_tip_dialog_max_width">480dp</item>
        <item name="qmui_tip_dialog_padding_vertical">42dp</item>
        <item name="qmui_tip_dialog_radius">15dp</item>
        <item name="qmui_tip_dialog_loading_size">96dp</item>
        <item name="qmui_tip_dialog_text_margin_top">36dp</item>
        <item name="qmui_tip_dialog_text_size">42sp</item>


        <!-- 修改腾讯的DiaLogUi-->
        <item name="qmui_dialog_min_width">360dp</item>
        <!--        创建出的 Dialog 中的选项 View 的样式-->

        <item name="qmui_bottom_sheet_max_width">1080dp</item>
        <item name="qmui_bottom_sheet_list_item_height">96dp</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="QMUI.BottomSheet.Title">
        <item name="android:textColor">#489cfa</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingLeft">?attr/qmui_bottom_sheet_padding_hor</item>
        <item name="android:paddingRight">?attr/qmui_bottom_sheet_padding_hor</item>
        <item name="android:paddingBottom">28dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    <style name="QMUI.BottomSheet.List.Text">
        <item name="android:textColor">?attr/qmui_skin_support_bottom_sheet_list_item_text_color
        </item>
        <item name="android:textSize">26sp</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="YourTopBarStyle" parent="QMUI.TopBar">
        <item name="android:background">#2D78DD</item>
        <item name="qmui_topbar_title_gravity">left_center</item>
        <item name="qmui_topbar_title_color">@color/white</item>
        <item name="qmui_topbar_text_btn_color_state_list">@color/white</item>
        <!--        <item name="qmui_topbar_text_btn_padding_horizontal">12dp</item>-->
        <item name="qmui_topbar_image_btn_height">30dp</item>
    </style>



</resources>