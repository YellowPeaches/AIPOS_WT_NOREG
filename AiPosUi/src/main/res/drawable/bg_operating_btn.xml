<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 此处设置key边距 -->
    <item>
        <selector>
            <!-- 按压后图层 -->
            <item android:state_pressed="true">
                <shape>
                    <solid android:color="@color/press_blue" />
                    <stroke android:width="1px" android:color="@color/press_blue_bolder"/>
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <!-- 正常状态图层 -->
            <item>
                <shape>
                    <solid android:color="@color/Grey125" />
                    <stroke android:color="@color/Grey350" android:width="1px" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>