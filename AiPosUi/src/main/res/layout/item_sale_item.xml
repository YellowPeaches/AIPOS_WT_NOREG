<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/account_title"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginVertical="15dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.34"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.67"/>

    <TextView
        android:id="@+id/item_goods_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="#1A1A1A"
        android:text="茄子"
        android:singleLine="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/gl_1"
        />
    <TextView
        android:id="@+id/item_weight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="@dimen/ui_30_dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="重量"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/gl_1"
        app:layout_constraintRight_toLeftOf="@id/gl_2"/>
    <TextView
        android:id="@+id/item_total"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="#1A1A1A"
        android:textStyle="bold"
        android:text="12.08"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/gl_1"
        app:layout_constraintRight_toLeftOf="@id/gl_2"/>
    <TextView
        android:id="@+id/item_img_btn"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:background="@color/wintec_blue"
        android:text="删除"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/gl_2"/>
</androidx.constraintlayout.widget.ConstraintLayout>





